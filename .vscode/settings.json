{
    "terminal.integrated.allowChords": false,
    "window.autoDetectColorScheme": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false, // Only for new projects.
    "editor.tabCompletion": "on",
    "editor.formatOnPaste": true,
    "editor.formatOnType": false,
    "editor.formatOnSave": true,
    "files.trimTrailingWhitespace": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true,
    },
    "eslint.run": "onSave",
    "eslint.codeAction.showDocumentation": {
        "enable": true
    },
    "eslint.format.enable": true,
    "eslint.nodeEnv": "production",
    "eslint.probe": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "html",
        "markdown",
    ],
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "html",
        "markdown",
    ],
    "eslint.debug": true,
    "eslint.lintTask.enable": true,
    "eslint.packageManager": "npm",
    "[javascript]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    },
    "[markdown]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint",
        "files.trimTrailingWhitespace": false,
    },
    "javascript.updateImportsOnFileMove.enabled": "always",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "phpcs.ignorePatterns": [
        "*vendor/*"
    ],
    "php-docblocker.alignParams": true,
    "php-docblocker.alignReturn": true,
    "php-docblocker.author": {
        "name": "Zachary K. Watkins",
        "email": "<zwatkins.it@gmail.com>"
    },
    "php-docblocker.defaultType": "string",
    "php-docblocker.extra": [
        "@throws ${###:Throwable}",
        "@version ${###:${env:PACKAGE_VERSION}}",
        "@since ${###:${env:PACKAGE_VERSION}}",
        "@return ${###:void}"
    ],
    "php-docblocker.paramDescription": "A parameter.",
    "php-docblocker.classTemplate": {
        "message": {
            "gapAfter": true
        },
        "package": {
            "content": "@package    ${env:PACKAGE_NAME}"
        },
        "subpackage": {
            "content": "@subpackage ${RELATIVE_FILEPATH/^([a-z]{1})([^.]+)(\\.php)/${1:/upcase}${2}/}"
        },
        "since": {
            "content": "@since      ${env:PACKAGE_VERSION}",
        },
        "author": {
            "content": "@author     {{name}} {{email}}"
        },
        "copyright": {
            "content": "@copyright  ${CURRENT_MONTH_NAME} ${CURRENT_DATE}, ${CURRENT_YEAR} ${env:PACKAGE_COPYRIGHT}"
        }
    },
    "php-docblocker.functionTemplate": {
        "message": {
            "gapAfter": true
        },
        "since": {
            "content": "@since     ${env:PACKAGE_VERSION}"
        },
        "param": {
            "gapBefore": true
        },
        "return": {
            "gapBefore": true,
            "gapAfter": true,
            "content": "@return    ${5|void,bool,string,array|}"
        },
        "author": {
            "content": "@author    {{name}} {{email}}"
        },
        "license": {
            "content": "@license   MIT"
        },
        "copyright": {
            "content": "@copyright ${CURRENT_MONTH_NAME} ${CURRENT_DATE}, ${CURRENT_YEAR} ${env:PACKAGE_COPYRIGHT}"
        }
    },
    "php-docblocker.qualifyClassNames": true,
    "php-docblocker.returnDescription": "${1:void}",
    "php-docblocker.returnGap": true,
    "php-docblocker.propertyTemplate": {
        "message": {
            "gapAfter": false
        },
        "var": {
            "content": "@var ${1|string,bool,int,array,object|}"
        }
    },
    "php-docblocker.varDescription": "Placeholder.",
    "phpunit.phpunit": "tools\\phpunit.bat",
}