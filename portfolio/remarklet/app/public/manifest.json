{
  "manifest_version": 3,
  "name": "Remarklet",
  "description": "Make changes to a web page and share them with others.",
  "version": "1.0",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "logo.svg"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["remarklet.iife.js"],
      "css": ["style.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
